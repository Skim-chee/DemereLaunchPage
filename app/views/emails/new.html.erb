<% provide(:title, 'Sign up') %>
<div class = "body">
  <div class="right-col">
    <div class="form col-md-6 col-md-offset-3">
      <%= form_for(@email) do |f| %>

      <%= f.email_field :email, placeholder: "email" %>

      <%= f.submit "Sign up for newsletter", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>