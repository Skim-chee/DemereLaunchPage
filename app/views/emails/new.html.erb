<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@email) do |f| %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.submit "Sign up for newsletter", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>