
<% @title = "Demere" %>
<% provide(:title, 'Sign up') %>


<div class = "wrapper">

  <!--  Home Section-->

  <div id = "homeheader">
    <%= link_to "demere", root_path, class: "loginlogo" %>
    <div class = "hometitle">
      <p>DRESS WITH CONFIDENCE</p>
    </div>

    <div class = "signupcontain">
      <div class = "homesignup">



        <div class = "signupbox">
        </div>
        <div class = "loginhead">
          <p class = "loginboxhead head">Thanks!</p>
          <p class = "loginboxhead">We just need a bit more information about you! </p>
          <% flash.each do |message_type, message| %>
            <div class="alert alert-<%= message_type %>"><%= message %></div>
          <% end %>
        </div>
        <div class = "signupform">

              <div class = "logincontent">


                <div class="logininputs">
                  <%= form_for(@email, :url => wizard_path, :method => :put) do |f| %>
                  <div class = "form-group">
                    <%= f.text_field :name, placeholder: "name", label: false, autofocus: true, class: 'name'%>
                  </div>
                  <div class = "form-group">
                    <%= f.text_field :zipcode, placeholder: "zipcode",label: false, class: 'zip'%>
                  </div>

                  <div class = "loginactions login">
                    <button class = "loginbutton">next</button>
                  </div>
                  <% end %>
                </div>
              </div>
        </div>
      </div>
    </div>
  </div>

  <!--  Description Section-->

  <div id = "homeinfo">
    <div class = "infosection">
      <h1 class = "infohead">Build Your Closet</h1>
      <p class = "infobody">Simply take pictures, using your phone or camera, of your articles of clothing and accessories and upload them to your virtual closet. </p>
    </div>
    <div class = "infosection infoleft">
      <h1 class = "infohead">Create an Outfit</h1>
      <p class = "infobody">Create outfits that are enhanced by our suggestions.</p>
    </div>
    <div class = "infosection infoleft">
      <h1 class = "infohead">Get Suggestions</h1>
      <p class = "infobody">Receive multiple outfit suggestions based on the weather or event you are attending.</p>
    </div>
  </div>
  <div id = "homeinfobar">
    <div class = "homeinfoback"></div>
    <h1 class = "infoparahead">Technology. Fashion. Shopping. </h1>
    <p class = "infopara" id = "infolightbox">Demere is combining these three areas to help save you time, money, and energy when getting dressed and shopping. By using proprietary image recognition capabilities we can suggest what you should wear based on items in your closet and ways to enhance your wardrobe. All this within seconds of logging onto our platform. We are so excited to help you get dressed on a daily basis!</p>
    <button class = "infomodal" data-featherlight = "#infolightbox"> Learn more! </button>
  </div>
  <div id = "signupbar">
    <button id = "sign-up-button">Sign up!</button>
  </div>
  <div id = "footer">
    <div class = "footer-contact">
      <p class = "footer-contact-head footer-link"> Want to get in touch with us? </p>
      <p class = "footer-link">(201) 956 1246</p>
      <a class = "footer-link" href="mailto:team@demere.co">team@demere.co</a>
    </div>
    <div class = "footer-social">
      <a href = "https://www.facebook.com/demereapp?_rdr=p" class = "fb" target="_blank"></a>
      <a href = "https://twitter.com/demereapp" class = "twit" target="_blank"></a>
    </div>
    <p class="copyright text-muted small">Copyright &copy; Demere 2015</p>
  </div>
</div>
